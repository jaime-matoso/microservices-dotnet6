@model IEnumerable<GeekShopping.Web.Models.ProductModel>

@{
    ViewData["Title"] = "Products";
}
<br />
<div class="container p-4 border">
    <div class="row pt-2">
        <div class="col">
            <h3 class="text-primary">Products List</h3>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="Create" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-plus"></i> Create New Product
            </a>
        </div>
    </div>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>
                        <a asp-action="Update" class="btn btn-sm btn-outline-warning" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-sm btn-outline-danger" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>